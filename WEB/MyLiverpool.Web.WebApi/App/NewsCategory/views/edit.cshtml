@using MyLiverpool.Business.Resources

<div class="top20" ng-init="vm.initEdit()">
    <form class="form-horizontal" name="editForm" role="form">
        <div class="form-group">
            <label class="control-label col-xs-2 col-sm-2"> @ColonsMessages.Title</label>
            <div class="col-xs-10 col-sm-10">
                <input class="form-control" name="title" ng-model="vm.category.name" validation="required" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-xs-2 col-sm-2">Описание</label>
            <div class="col-xs-10 col-sm-10">
                <textarea mark-it-up class="form-control" name="brief" rows="4" ng-model="vm.category.description" validation="required"> </textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-offset-2 col-sm-offset-2 col-xs-10 col-sm-10">
                <input type="submit" value="@CommonMessages.Save" ng-disabled="editForm.$invalid" ng-click="vm.save()" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>
