@using MyLiverpool.Business.Resources

<div class="table-responsive" ng-init="vm.init()">
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>@UsersMessages.LastLogin</th>
                <th>@UsersMessages.UserName</th>
                <th>@UsersMessages.RegistrationDate</th>
                <th>@UsersMessages.Group</th>
            </tr>
        </thead>
        <tbody ng-repeat="user in vm.users">
                <tr>
                    <td class="" ng-bind="user.lastModified | date:'medium'">
                    </td>
                    <td class="">
                        <a ui-sref="userInfo({id: user.id})">
                            <div class="col-md-3">
                                <img class="mini-avatar" ng-src="{{user.photo}}"/>
                            </div>
                            <span ng-bind="user.userName"></span></a>
                        <span class="text-danger" uib-tooltip="@CommonMessages.EmailNotConfirm" ng-show="!user.emailConfirmed"> *</span>
                        <a ng-show="loggedIn() && vm.isNotSelf(user.id, userId())" ui-sref="wpm({ userName: user.userName })"><span class="glyphicon glyphicon-envelope"></span></a>
                    </td>
                    <td class="" ng-bind="user.registrationDate | date:'medium'">
                    </td>
                    <td class="" ng-bind="user.roleGroupName">
                    </td>
                </tr>
        </tbody>
    </table>
</div>
<div class="pagination">
    <uib-pagination ng-show="vm.countPage > 15" total-items="vm.countPage" ng-model="vm.pageNo" ng-change="vm.goToPage()"></uib-pagination>
</div>