@using MyLiverpool.Business.Resources

<div class="row-fluid">
    <div class="row">
        <h3 class="">
            <span class="col-md-9 alert-danger">
                {{ item.title }}
            </span>
            <span class="col-md-3">
                @if (User.IsInRole("NewsStart"))
                {
                    <span class="small pull-right" ng-show="isUserAuthor(userId(), item.authorId)">
                        <a ng-show="item.pending" ng-click="activate($index)"><span class="glyphicon glyphicon-ok"></span></a>
                        <a ui-sref="newsEdit({id: item.id})"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a data-toggle="modal" data-target="#confirmDelete" data-id=""><span class="glyphicon glyphicon-trash"></span></a>
                    </span>
                }
            </span>
        </h3>
    </div>
    <div class="row-fluid">
        {{ item.message }}
        <div class="row-fluid alert-warning">
            <ul class="list-inline">
                <li><label>@ColonsMessages.Reads</label> {{ item.reads }}</li>
                <li><label>@ColonsMessages.Source</label> {{ item.source }}</li>
                <li><label>@ColonsMessages.AdditionTime</label> {{ item.additionTime | date:'medium' }}</li>
                <li><label>@ColonsMessages.Category</label> <a ui-sref="news({page: 1, categoryId: item.newsCategoryId})"> {{ item.newsCategoryName }} </a></li>
            </ul>
        </div>
    </div>

    {{item.comments.length}}
    <div class="" id="comments" ng-repeat="comment in item.comments">
        <tree comment="comment" deep="0"></tree>
    </div>

    <div class="col-md-12" ng-if="item.canCommentary" ng-show="loggedIn()">
        <div class="col-md-12">
            <textarea id="newsCommentMessage" class="col-md-offset-3 col-md-6" rows="6"></textarea>
        </div>
        <div class="row">
            <button class="btn btn-primary center-block" data-toggle="modal" data-target="#myModal" id="addComment"> @CommonMessages.Create</button>
        </div>
    </div>
</div>
