@using MyLiverpoolSite.Business.ViewModels.Account
@using MyLiverpoolSite.Business.ViewModels.Resources
@model LoginViewModel
@{
    ViewBag.Title = CommonMessages.EnterToSite;
}

<h2>@CommonMessages.EnterToSite</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            <form class="form-horizontal" role="form" ng-submit="login()">
                <hr />
                <div class="form-group">
                    <label class="col-md-2 control-label" for="emailAddress">Email address</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="emailAddress" placeholder="Enter email" ng-model="loginForm.username">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="password">Password</label>
                    <div class="col-md-10">
                        <input type="password" class="form-control" id="password" placeholder="Password" ng-model="loginForm.password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <input type="checkbox" />
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <p class="help-block" ng-if="loginForm.errorMessage">{{loginForm.errorMessage}}</p>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="@CommonMessages.Login" class="btn btn-default" />
                    </div>
                </div>
                @*  <p>
                 @Html.ActionLink("Register as a new user", "Register")
             </p>
            Enable this once you have account confirmation enabled for password reset functionality
                 <p>
                     @Html.ActionLink("Forgot your password?", "ForgotPassword")
                 </p>*@
                </form>
</section>
    </div>
    <div class="col-md-4">
        <section id="socialLoginForm">
        @*    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })*@
        </section>
    </div>
</div>