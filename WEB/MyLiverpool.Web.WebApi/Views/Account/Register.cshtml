@using MyLiverpoolSite.Business.ViewModels.Resources
@model MyLiverpoolSite.Business.ViewModels.Account.RegisterViewModel
@{
    ViewBag.Title = CommonMessages.Registration;
}

<h2>@CommonMessages.Registration</h2>
<form role="form" ng-submit="register()">
    <hr/>
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            <input type="text" ng-model="registerForm.userName" id="userName" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            <input type="email" ng-model="registerForm.emailAddress" id="email" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-md-2 control-label">password</label>
        <div class="col-md-10">
            <input type="password" id="password" ng-model="registerForm.password" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label for="confirmPassword" class = "col-md-2 control-label">ConfirmPassword</label>
            <div class="col-md-10">
                <input type="password" id="confirmPassword" ng-model="registerForm.confirmPassword" class="form-control" />
            </div>
</div>
    <div class="form-group">
        @Html.LabelFor(m => m.FullName, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            <input type="text" ng-model="registerForm.fullName" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BirthDay, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            <input type="date" ng-model="registerForm.birthDayDate" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <p class="help-block" ng-if="registerForm.errorMessage">{{registerForm.errorMessage}}</p>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="@CommonMessages.Register"/>
        </div>
    </div>
</form>



    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $('.datepicker').datepicker({
            format: 'dd/mm/yyyy',
            language: 'ru'
        });

        $('#UserName').on('keyup', function() {
            var userName = $(this).val();
            if (userName.length < 3) return;
            delay(function () {
                $.ajax({
                    type: 'post',
                    url: '@Url.Action("IsUserNameUnique", "Account")',
                    data: { userName: userName },
                    beforeSend: function() {

                    },
                    success: function(response) {
                        if (response) {
                            $('#UserName').removeClass('input-validation-error');
                            console.log('good name');
                        } else {
                            $('#UserName').addClass('input-validation-error');
                            console.log("not good name");
                        }
                    }
                });
            }, 3000);
        });

        $('#Email').on('keyup', function () {
            var email = $(this).val();
            delay(function()
            {
                $.ajax({
                    type: 'post',
                    url: '@Url.Action("IsEmailUnique", "Account")',
                    data: { email: email },
                    beforeSend: function () {

                    },
                    success: function (response) {
                        if (response) {
                            $('#Email').removeClass('input-validation-error');
                            console.log('good email');
                        } else {
                            $('#Email').addClass('input-validation-error');
                            console.log("not good email");
                        }
                    }
                });
            }, 3000);
        });
         
        var delay = (function () {
            var timer = 0;
            return function (callback, ms) {
                clearTimeout(timer);
                timer = setTimeout(callback, ms);
            };
        })();
    </script>

