    <title ng-bind="($title || '@CommonMessages.Main') + ' -  @CommonMessages.SiteTitleAddress'"></title>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/App")
