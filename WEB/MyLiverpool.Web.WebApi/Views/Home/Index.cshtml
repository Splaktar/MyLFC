<body>
    <div class="container-fluid navbar navbar-inverse navbar-fixed-top ">
        <ul class="nav navbar-nav col-md-6 list-inline">
            <li><a id="back-top" href="#" style="display: none;">@CommonMessages.Up</a></li>
            <li class="divider"></li>
            <li ng-if="loggedIn()">
                <a ui-sref="pms()"><span class="glyphicon glyphicon-envelope"></span> @CommonMessages.ReadPM (<span ng-bind="unreadPmCount"></span>)</a>
            </li>
            <li class="divider"></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li ng-if="!loggedIn()">
                <form ng-controller="LoginController" name="loginForm" class="form-inline" role="form" style="margin-top: 8px;">
                    <div class="form-group">
                        <label class="sr-only" for="UserName">@ColonsMessages.UserName</label>
                        <input type="text" placeholder="@UsersMessages.UserName" class="form-control" name="UserName" id="UserName" ng-model="loginForm.userName" validation="required" validation-error-to="myError">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="password">@ColonsMessages.Password</label>
                        <input type="password" placeholder="@UsersMessages.Password" class="form-control" name="password" id="password" ng-model="loginForm.password" validation="required" validation-error-to="myError">
                        <span id="myError" style="display: none;"></span>
                    </div>
                    <div class="form-group">
                        <span class="text-danger" ng-if="loginForm.errorMessage" ng-bind="loginForm.errorMessage">
                            <a class="button" ui-sref="forgotPassword">@CommonMessages.ForgotPassword</a>
                        </span>
                    </div>
                    <div class="form-group">
                        <div>
                            <input type="submit" ng-click="login()" ng-disabled="!loginForm.userName || !loginForm.password" value="@CommonMessages.Login" class="btn btn-default" />
                        </div>
                    </div>
                </form>
            </li>
            <li ng-if="!loggedIn()">
                <a ui-sref="register">@CommonMessages.Registration</a>
            </li>
            @*<li>
                    <a ui-sref="login({ returnUrl: getReturnUrl() })" ng-if="!loggedIn()">@CommonMessages.Login</a>
                </li>*@
            <li>
                <ul class="nav navbar-nav" ng-if="loggedIn()">
                    <li>
                        <a ui-sref="userInfo({id: userId()})" class="padding0">
                            <img class="nav-avatar" ng-src="{{$root.userImage}}" />
                        </a>
                    </li>
                    <li>
                        <a ui-sref="userInfo({id: userId()})">@CommonMessages.MyProfile</a>
                    </li>
                    <li>
                        <a ng-click="logout()">@CommonMessages.Logout</a>
                    </li>
                    <li>
                        <span class="label label-success">Logged In</span>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
