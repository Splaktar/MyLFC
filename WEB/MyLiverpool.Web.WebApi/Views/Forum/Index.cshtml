@using MyLiverpool.Business.Resources
<div class="col-md-12" ng-init="init()">
    <div class="container-fluid" ng-repeat="section in sections">
        <div class="panel panel-danger" ng-show="section.subsections.length > 0 || isAdminAssistant()">
            <div class="panel-heading" ng-bind="section.name"></div>
            <!--div class="panel-body"></!--div>-->
            <ul class="list-group" ng-repeat="subsection in section.subsections">
                <li class="list-group-item list">
                    <a ui-sref="subsection({id: subsection.id})"><span ng-bind="subsection.name"></span> <span class="small" ng-bind="subsection.description"></span></a>
                </li>
            </ul>
        </div>
    </div>
    <a ng-show="isAdminAssistant()" ng-click="addSection()">@CommonMessages.AddSection</a> {{newSectionName}}
</div>

<script type="text/ng-template" id="addSection.html">
    <div class="modal-header">
        <h3 class="modal-title">@CommonMessages.AddSection</h3>
    </div>
    <div class="modal-body">
        <form class="form-horizontal" name="addSection" role="form">
            <div class="form-group">
                <label for="newSectionName" class="col-md-2 control-label">@ColonsMessages.SectionName</label>
                <div class="col-md-10">
                    <input type="text" name="newSectionName" ng-model="sectionName" validation="required" class="form-control" />
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" ng-disabled="addSection.$invalid"type="button" ng-click="ok()">@CommonMessages.Add</button>
        <button class="btn btn-default" type="button" ng-click="cancel()">@CommonMessages.Cancel</button>
    </div>
</script>
