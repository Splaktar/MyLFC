@using MyLiverpool.Business.Resources

<div class="table-responsive">
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>@UsersMessages.LastLogin</th>
                <th>@UsersMessages.UserName</th>
                <th>@UsersMessages.RegistrationDate</th>
                <th>@UsersMessages.Group</th>
            </tr>
        </thead>
        <tbody ng-repeat="user in users">
                <tr>
                    <td class="">
                        {{ user.lastModified | date:'medium' }}
                    </td>
                    <td class="">
                        <a ui-sref="userInfo({id: user.id})">{{ user.userName }}</a>
                        <a ng-show="loggedIn() && isNotSelf(user.id, userId())" ui-sref="wpm({ userId: user.id, userName: user.userName })"><span class="glyphicon glyphicon-envelope"></span></a>
                    </td>
                    <td class="">
                        {{ user.registrationDate | date:'medium' }}
                    </td>
                    <td class="">
                        {{ user.roleGroupName }}
                    </td>
                </tr>
        </tbody>
    </table>
</div>
<div class="pagination">
    <uib-pagination ng-show="countPage > 15" total-items="countPage" ng-model="pageNo" ng-change="goToPage()"></uib-pagination>
</div>