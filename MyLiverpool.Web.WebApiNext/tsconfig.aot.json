{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "es2015", "dom" ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "temp-js/dist/unbundled-aot",
        "baseUrl": "angular2app",
        "paths": {
            "@app/*": [ "app/*" ]
        }
    },

    "files": [
        "angular2app/app/app.module.browser.ts",
        "angular2app/main.browser.aot.ts"
    ],
    "typeRoots": [
        "./node_modules/@types"
    ],
    "types": [
        "node",
        "tinymce"
    ],

    "angularCompilerOptions": {
        "genDir": "./temp-js/aot",
        "skipMetadataEmit": true
    },
    "atom": { "rewriteTsconfig": false }
}