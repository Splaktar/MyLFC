@model MatchDto

@if (Model != null)
{
    <div class="col-xs-12 container-row">
        <div class="col-xs-12 text-center bottom10">
            <span class="timeConvert" data-date="@Model.DateTime.ToString("O")" data-dow="true" data-sec="false"></span>, @Model.TypeName, @Model.StadiumName
        </div>
        <div class="col-xs-4">
            <div class="full-width text-center">
                <img src="@Model.HomeClubLogo" alt="@Model.HomeClubName" title="@Model.HomeClubName" />
            </div>
            <div class="full-width text-center">
                <b class="font-size20">@Model.HomeClubName</b>
            </div>
        </div>
        <div class="col-xs-4 font-size40 text-center">
            <b class="col-xs-5">@Model.ScoreHome</b>
            <span class="col-xs-2 padding0">:</span>
            <b class="col-xs-5">@Model.ScoreAway</b>
            <!--<i class="font-size13">Серия пенальти:</i>-->
            @if (Model.ScorePenaltyHome.HasValue && Model.ScorePenaltyAway.HasValue)
            {
                <b>(@Model.ScorePenaltyHome-@Model.ScorePenaltyAway)</b>
            }
        </div>
        <div class="col-xs-4">
            <div class="full-width text-center">
                <img src="@Model.AwayClubLogo" alt="@Model.AwayClubName" title="@Model.AwayClubName" />
            </div>
            <div class="full-width text-center">
                <b class="font-size20">@Model.AwayClubName</b>
            </div>
        </div>
        <div class="col-xs-12 text-center">
            <a asp-action="Detail" asp-controller="Matches" asp-route-id="@Model.Id">Перейти к обсуждению(@Model.CommentCount)</a>
        </div>
    </div>
}