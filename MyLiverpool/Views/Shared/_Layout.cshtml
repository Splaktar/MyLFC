<!DOCTYPE html>
<html >
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container-fluid" style="position: fixed;">
            @Html.Partial("_LoginPartial")
    </div>
<div class="container-fluid" style="margin-top: 40px">
    <header class="navbar navbar-inverse navbar-static-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar">1</span>
                <span class="icon-bar">2</span>
                <span class="icon-bar">3</span>
            </button>
            @Html.ActionLink("My Liverpool", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                <li>@Html.ActionLink("News", "Index", "News")</li>
                <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">News <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("News", "Index", "News")</li>
                        <li>@Html.ActionLink("Create", "Create", "News")</li>
                        <li>@Html.ActionLink("Create", "Create", "News")</li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Blogs <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("News", "Index", "Blog")</li>
                        <li>@Html.ActionLink("Create", "Create", "Blog")</li>
                        <li>@Html.ActionLink("Create", "Create", "Blog")</li>
                    </ul>
                </li>
            </ul>
            @* @Html.Partial("_LoginPartial")*@
        </div>

    </header>
    <div class="body-content row">
        <div class="col-md-3">
            @Html.Partial("_LeftSideBar")
        </div>
        <div class="col-md-6">
            @RenderBody()
        </div>
        <div class="col-md-3">
            @Html.Partial("_RightSideBar")
        </div>
    </div>
    <hr/>
    <footer class="bottom container-fluid">
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
